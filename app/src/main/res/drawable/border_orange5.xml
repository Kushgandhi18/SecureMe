<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <shape
            android:shape="rectangle">
            <corners android:topLeftRadius="10dp" android:topRightRadius="10dp"></corners>
            <!-- Set the border color of your layout here -->
            <stroke android:width="1dp" android:color="@color/gray" />
            <solid android:color="@color/gray" />

        </shape>
    </item>

    <!-- This is for border bottom but
    you can change this according to your need -->
    <item android:top="20dp" >
        <shape
            android:shape="rectangle">

            <!-- Set the background color of your layout here -->
            <solid android:color="#fff" />
        </shape>
    </item>

    <item android:top="1dp" android:left="1dp" android:right="1dp" >
        <shape
            android:shape="rectangle">

            <corners android:topLeftRadius="10dp" android:topRightRadius="10dp"></corners>
            <!-- Set the background color of your layout here -->

            <solid android:color="#fff" />
        </shape>
    </item>

</layer-list>